{
	"env": {
		"browser": true,
		"es2020": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": [
		"react"
  ],
  "settings": {
    "react": {
        "version": "detect"
    }
  },
	"rules": {
		"react/react-in-jsx-scope": "off",
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error",
		"react-hooks/exhaustive-deps": 0,
		"quotes": [
				"error",
				"single"
		]
	}
}
